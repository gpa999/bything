<h1 class="signup-top">Bything</h1>

<div class="signup-contents">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス" , class:"signup-form"%>
  </div>
  
  <div class="field">
    <%= f.text_field :name, autofocus: true ,placeholder:"名前", class:"signup-form"%>
  </div>
  
  <div class="field">
    <%= f.text_field :user_path, autofocus: true, placeholder:"ユーザーパス", class:"signup-form" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード", class:"signup-form" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード（確認）", class:"signup-form" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" ,class:"signup-input"%>
  </div>
<% end %>
</div>
